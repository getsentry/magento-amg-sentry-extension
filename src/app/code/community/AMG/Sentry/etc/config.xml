<config>
	<modules>
		<AMG_Sentry>
			<version>1.0.0</version>
		</AMG_Sentry>
	</modules>
	<global>
		<models>
			<amg-sentry>
				<class>AMG_Sentry_Model</class>
			</amg-sentry>
		</models>
		<events>
			<controller_action_predispatch>
				<observers>
					<amg-sentry_controller_action_predispatch>
						<class>amg-sentry/observer</class>
						<method>initSentryLogger</method>
					</amg-sentry_controller_action_predispatch>
				</observers>
			</controller_action_predispatch>
		</events>
	</global>
	<default>
		<dev>
			<amg-sentry>
				<active>0</active>
				<dsn>http://public:secret@sentry.example.com:9000/[PROJECT_ID]</dsn>
				<logger>magento</logger>
				<php-errors>0</php-errors>
				<php-exceptions>0</php-exceptions>
				<ignore-error-control-operator>1</ignore-error-control-operator>
			</amg-sentry>
		</dev>
	</default>
</config>
